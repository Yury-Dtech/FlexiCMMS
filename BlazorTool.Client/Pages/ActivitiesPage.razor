    private async Task OnTimelineOptionChanged(string option)
    {
        selectedTimelineOption = option;
        if (option == "Custom")
        {
            showCustomTimelineInputs = true;
        }
        else
        {
            showCustomTimelineInputs = false;
            if (int.TryParse(option, out int days))
            {
                switch (days)
                {
                    case 1:
                        columnWidth = 70;
                        slotDuration = 45;
                        slotDivisions = 1;
                        break;
                    case 3:
                        columnWidth = 70;
                        slotDuration = 135;
                        slotDivisions = 1;
                        break;
                    case 5:
                        columnWidth = 50;
                        slotDuration = 180;
                        slotDivisions = 1;
                        break;
                    case 7:
                        columnWidth = 60;
                        slotDuration = 360;
                        slotDivisions = 1;
                        break;
                    case 14:
                        columnWidth = 90;
                        slotDuration = 900;
                        slotDivisions = 1;
                        break;
                    default:
                        break;
                }
                numberOfDays = days;
            }
        }
        await InvokeAsync(StateHasChanged);
        SchedulerRef?.Rebind();
        _saveStateTimer?.Change(SaveStateDelay, Timeout.Infinite);
    }

